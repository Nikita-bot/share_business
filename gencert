#!/bin/bash
# GRPC generate

rm -r ./cert
mkdir ./cert

# 1. Generate CA's private key and self-signed certificate
openssl req -addext "subjectAltName = DNS:localhost" -x509 -newkey rsa:4096 -days 365 -nodes -keyout cert/ca-key.pem -out cert/ca-cert.pem -subj "/C=RU/ST=./L=./O=./OU=./CN=localhost/emailAddress=."
echo "CA's self-signed certificate"
openssl x509 -in cert/ca-cert.pem -noout -text

# 2. Generate web server's private key and certificate signing request (CSR)
openssl req  -addext "subjectAltName = DNS:localhost" -newkey rsa:4096 -nodes -keyout cert/server-key.pem -out cert/server-req.pem -subj "/C=RU/ST=./L=./O=./OU=./CN=localhost/emailAddress=."

# 3. Use CA's private key to sign web server's CSR and get back the signed certificate
openssl x509 -req -in cert/server-req.pem -days 60 -CA cert/ca-cert.pem -CAkey cert/ca-key.pem -CAcreateserial -out cert/server-cert.pem
echo "Server's signed certificate"
openssl x509 -in cert/server-cert.pem -noout -text